     private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton2ActionPerformed
	  // TODO add your handling code here: 
	  //CONFIRM
	  try {
	       //Parsovanie dni 
	       int retval = Integer.parseInt(this.jSpinner11.getValue().toString());
	       if (retval < 1 || retval > 31) {
		    JOptionPane.showMessageDialog(new javax.swing.JFrame(), "Invalid date!", "Error", JOptionPane.ERROR_MESSAGE);
		    return;
	       }
	       alertDays = retval;
	       //parsovanie hodin
	       retval = Integer.parseInt(this.jSpinner10.getValue().toString());
	       if (retval < 0 || retval > 23) {
		    JOptionPane.showMessageDialog(new javax.swing.JFrame(), "Invalid date!", "Error", JOptionPane.ERROR_MESSAGE);
		    return;
	       }
	       alertHours = retval;
	       //parsovanie mesiacov
	       retval = Integer.parseInt(this.jSpinner12.getValue().toString());
	       if (retval < 1 || retval > 31) {
		    JOptionPane.showMessageDialog(new javax.swing.JFrame(), "Invalid date!", "Error", JOptionPane.ERROR_MESSAGE);
		    return;
	       }
	       alertMonths = retval;
	       //parsovanie rokov
	       retval = Integer.parseInt(this.jSpinner13.getValue().toString());
	       if (retval < 0) {
		    JOptionPane.showMessageDialog(new javax.swing.JFrame(), "Invalid date!", "Error", JOptionPane.ERROR_MESSAGE);
		    return;
	       }
	       alertYears = retval;
	       //parsovanie dni
	       retval = Integer.parseInt(this.jSpinner7.getValue().toString());
	       if (retval < 0 || retval > 30) {
		    JOptionPane.showMessageDialog(new javax.swing.JFrame(), "Invalid date!", "Error", JOptionPane.ERROR_MESSAGE);
		    return;
	       }
	       intervalDays = retval;
	       //parsovanie hodin
	       retval = Integer.parseInt(this.jSpinner6.getValue().toString());
	       if (retval < 1 || retval > 23) {
		    JOptionPane.showMessageDialog(new javax.swing.JFrame(), "Invalid date!", "Error", JOptionPane.ERROR_MESSAGE);
		    return;
	       }
	       intervalHours = retval;
	       //parsovanie mesiacov
	       retval = Integer.parseInt(this.jSpinner8.getValue().toString());
	       if (retval < 0 || retval > 11) {
		    JOptionPane.showMessageDialog(new javax.swing.JFrame(), "Invalid date!", "Error", JOptionPane.ERROR_MESSAGE);
		    return;
	       }
	       intervalMonths = retval;
	       //parsovanie rokov
	       retval = Integer.parseInt(this.jSpinner9.getValue().toString());
	       if (retval < 0) {
		    JOptionPane.showMessageDialog(new javax.swing.JFrame(), "Invalid date!", "Error", JOptionPane.ERROR_MESSAGE);
		    return;
	       }
	       intervalYears = retval;


	  } catch (NumberFormatException nfe) {
	       JOptionPane.showMessageDialog(new javax.swing.JFrame(), "Invalid date!", "Error", JOptionPane.ERROR_MESSAGE);
	       return;
	  }
	  this.action = "CONFIRM";
	  this.setVisible(false);
	  
     }//GEN-LAST:event_jButton2ActionPerformed

